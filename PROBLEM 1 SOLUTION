#include <iostream>
#include <conio.h>
#include <string>
#include <iomanip>
using namespace std;
int main ()
{
	double ticketPrice;
	double numberOfTicketsSold;

	cout << "Enter ticket price" << endl;
	cin >> ticketPrice;

	cout << "Enter number of tickets sold" << endl;
	cin >> numberOfTicketsSold;

	cout << "Total ticket sales (in dollars):" << setprecision(2) << ticketPrice * numberOfTicketsSold  << endl;

	-getch();
	return 0;
}
